<div class="container">
<h2> New task </h2>

<%= form_with model: @task do |f| %>
  <div class="mb-3">
  <%= f.label :title, { class: "form-label"} %>
  <%= f.text_field :title, { class: "form-control"} %>
  </div>

    <div class="mb-3">
  <%= f.label :details, { class: "form-label"} %>
  <%= f.text_field :details, { class: "form-control"} %>
    </div>

  <%= f.submit "Add task",  class: "btn btn-primary"%>
<% end %>
<%= link_to "Go back to list", "/tasks", :class => "btn btn-primary btn-sm"%>
</div>
