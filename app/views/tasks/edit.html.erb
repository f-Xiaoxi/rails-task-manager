<div class="container">
<h2> Edit task </h2>

<%= form_with model: @task do |f| %>
  <div class="mb-3">
  <%= f.label :title, { class: "form-label"} %>
  <%= f.text_field :title, { class: "form-control"} %>
  </div>

  <div class="mb-3">
  <%= f.label :details, { class: "form-label"} %>
  <%= f.text_field :details, { class: "form-control"} %>
  </div>

  <div class="mb-3">
  <%= f.check_box :completed %>
  <%= f.label "completed", { class: "form-label"} %>
  </div>
  <%= f.submit "Save task",  class: "btn btn-primary" %>
<% end %>

<script>
function myFunction() {
  @task.completed == true;
}
</script>
